<!-- NEWS -->
<div class="news margin-bottom-60">

    <div class="container">

        <div class="row">

            @foreach (var item in Model.NewsList.Take(2))
            {
                <div class="col-sm-4 margin-bottom-30">

                    <div class="widget_pw_latest_news">
                        <a class="latest-news" href="@((PortalProject.Core.Enums.Common.Language)ViewBag.Language == PortalProject.Core.Enums.Common.Language.Turkce ? "/haberler/" + item.SeoUrl + "/" + item.Id : "/en/news/" + item.SeoUrl + "/" + item.Id)">
                            <div class="latest-news__date">
                                <div class="latest-news__date__month">@System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Convert.ToDateTime(@item.Date).Month)</div>
                                <div class="latest-news__date__day">@Convert.ToDateTime(@item.Date).ToString("dd")</div>
                            </div>
                            <img alt="@item.Title" class="wp-post-image" sizes="(min-width: 781px) 360px, calc(100vw - 30px)" srcset="~/Content/@item.Photo 360w, ~/Content/@item.Photo 848w" src="~/Content/@item.Photo">
                            <div class="latest-news__content">
                                <h4 class="latest-news__title">@item.Title</h4>
                                <div class="latest-news__author">@item.Creator @PortalProject.Web.Resources.Resource.TarafindanOlusturuldu</div>
                            </div>
                        </a>
                    </div><!-- /.widget_pw_latest_news -->

                </div><!-- /.col -->
            }

            <div class="col-sm-4 margin-bottom-30">

                <div class="widget_pw_latest_news">
                    @foreach (var item in Model.NewsList.Skip(2).Take(3))
                    {
                        <a class="latest-news  latest-news--inline" href="@((PortalProject.Core.Enums.Common.Language)ViewBag.Language == PortalProject.Core.Enums.Common.Language.Turkce ? "/haberler/" + item.SeoUrl + "/" + item.Id : "/en/news/" + item.SeoUrl + "/" + item.Id)">
                            <div class="latest-news__content">
                                <h4 class="latest-news__title">@item.Title</h4>
                                <div class="latest-news__author">@item.Creator @PortalProject.Web.Resources.Resource.TarafindanOlusturuldu</div>
                            </div>
                        </a>
                    }
                    <a class="latest-news  latest-news--more-news" href="@((PortalProject.Core.Enums.Common.Language)ViewBag.Language == PortalProject.Core.Enums.Common.Language.Turkce ? "/haberler" : "/en/news")">
                        @PortalProject.Web.Resources.Resource.DigerHaberler
                    </a>
                </div><!-- /.widget_pw_latest_news -->

            </div><!-- /.col -->

        </div><!-- /.row -->

    </div><!-- /.container -->

</div><!-- /.news -->
