<div class="container">

    <div class="row margin-bottom-30">

        <div class="col-sm-3 hentry">

            <div class="widget_black-studio-tinymce">
                <div class="featured-widget">
                    <h3 class="widget-title">
                        <span class="widget-title__inline">İletişim</span>
                    </h3>
                    <p>
                        @ViewBag.Contact.Address
                    </p>
                    <p>
                        @ViewBag.Contact.Phone<br>
                        <a href="mailto:@ViewBag.Contact.Email">@ViewBag.Contact.Email</a>
                    </p>
                </div>
            </div>

            <div class="widget_pw_opening_time">

                <div class="featured-widget">
                    <h3>
                        <span class="icon icons-ornament-left"></span>
                        Çalışma Saatleri
                        <span class="icon icons-ornament-right"></span>
                    </h3>
                    <dl class="week-day ">
                        <dt>Pazartesi</dt>
                        <dd>8:30 - 17:30</dd>
                    </dl>
                    <dl class="week-day  light-bg">
                        <dt>Salı</dt>
                        <dd>8:30 - 17:30</dd>
                    </dl>
                    <dl class="week-day ">
                        <dt>Çarşamba</dt>
