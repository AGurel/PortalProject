@model PortalProject.Web.Models.ProductModel
@{
    ViewBag.Title = @Model.Product.Name + " | " + ViewBag.Setting.Title;
}

<!-- MAIN TITLE -->
<div class="main-title">
    <div class="container">
        <h1 class="main-title__primary">@Model.Product.Name</h1>
    </div>
</div><!-- /.main-title -->
<!-- BREADCRUMBS -->
<div class="breadcrumbs">
    <div class="container">
        <span>
            <a class="home" href="/" title="Anasayfaya Git" rel="v:url">Anasayfa</a>
        </span>
        <span>
            <a class="home" href="@(ViewContext.RouteData.GetRequiredString("actionName") == "iha" ? "/iha" : "/ea")" title="@(ViewContext.RouteData.GetRequiredString("actionName") == "iha" ? "İnsansız Hava Araçları (İHA)" : "Elektrikli Araçlar (EA)")" rel="v:url">@(ViewContext.RouteData.GetRequiredString("actionName") == "iha" ? "İnsansız Hava Araçları (İHA)" : "Elektrikli Araçlar (EA)")</a>
        </span>
        <span>
            <span>@Model.Product.Name</span>
        </span>
    </div>
</div><!-- /.breadcrumbs -->

<div class="container">

    <div class="row">

        <main class="col-xs-12 col-md-12">

            <div class="row margin-bottom-30">

                <div class="col-sm-12">

                    @Html.Raw(Model.Product.Content)

                </div><!-- /.col -->

            </div><!-- /.row -->

        </main><!-- /.col -->

    </div><!-- /.row -->

</div><!-- /.container -->

