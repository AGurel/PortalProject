@model PortalProject.Web.Models.NewsModel

@{
    ViewBag.Title = PortalProject.Web.Resources.Resource.Haberler + " | " + ViewBag.Setting.Title;
}

<!-- MAIN TITLE -->
<div class="main-title">
    <div class="container">
        <h1 class="main-title__primary">@PortalProject.Web.Resources.Resource.Haberler</h1>
    </div>
</div><!-- /.main-title -->
<!-- BREADCRUMBS -->
<div class="breadcrumbs">
    <div class="container">
        <span>
            <a class="home" href="/@PortalProject.Web.Resources.Resource.Dil" title="@PortalProject.Web.Resources.Resource.AnasayfayaDon" rel="v:url">@PortalProject.Web.Resources.Resource.Anasayfa</a>
        </span>
        <span>
            <span>@PortalProject.Web.Resources.Resource.Haberler</span>
        </span>
    </div>
</div><!-- /.breadcrumbs -->

<div class="container">

    <div class="row margin-bottom-30">

        @foreach (var item in Model.NewsList)
        {
            <div class="col-sm-4 margin-bottom-30">

                <h3>
                    <a href="@((PortalProject.Core.Enums.Common.Language)ViewBag.Language == PortalProject.Core.Enums.Common.Language.Turkce ? "/haberler/" + item.SeoUrl + "/" + item.Id : "/en/news/" + item.SeoUrl + "/" + item.Id)"><img alt="placeholder" src="~/Content/@item.Photo" class="alignnone"></a>
                </h3>
                <h4 class="subLight">
                    @item.Title
                </h4>

            </div><!-- /.col -->
        }

    </div><!-- /.row -->

</div><!-- /.container -->

