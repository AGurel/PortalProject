@model PortalProject.Web.Areas.Admin.Models.FaqModel
@{
    <script src="~/areas/admin/ckfinder/ckfinder.js"></script>
    <script src="~/areas/admin/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script>
    $(function () {
        @* Burada Ckeditorün içine Ckfinder'ı dahil ettik.*@

        CKEDITOR.replace("txtIcerik");
        CKFinder.setupCKEditor(null, "/areas/admin/ckfinder/");
    });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">SSS Ekle</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("FaqEdit", "Faq", System.Web.Mvc.FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <input name="hfId" value="@Model.Id" type="hidden" />
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Durum</label>
                                <select name="Active" class="form-control">
                                    <option value="1" @(Model.Active == PortalProject.Core.Enums.Common.State.Active ? "selected=selected" : " ")>Aktif</option>
                                    <option value="0" @(Model.Active == PortalProject.Core.Enums.Common.State.Passive ? "selected=selected" : " ")>Pasif</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input name="Title" value="@Model.Title" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Sıra</label>
                                <input name="Order" value="@Model.Order" class="form-control" required>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>İçerik</label>
                                <textarea id="txtIcerik" name="Content" rows="2" cols="20">@Model.Content</textarea>
                            </div>
                            <input type="submit" class="btn btn-default" value="Kaydet" />
                        </div>
                    }
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
