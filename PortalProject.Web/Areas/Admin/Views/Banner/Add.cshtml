@model PortalProject.Web.Areas.Admin.Models.BannerModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Banner Ekle</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("BannerAdd", "Banner", System.Web.Mvc.FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Görsel (1920 x 600 px)</label>
                                <input type="file" name="Photo" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label>Durum</label>
                                <select name="Active" class="form-control">
                                    <option value="1">Aktif</option>
                                    <option value="2">Pasif</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Url Hedef</label>
                                <select name="UrlTarget" class="form-control">
                                    <option value="_self">Url aynı sekmede açılsın</option>
                                    <option value="_blank">Url yeni sekmede açılsın</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Url</label>
                                <input name="Url" class="form-control">
                            </div>

                            <input type="submit" class="btn btn-default" value="Kaydet" />
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input name="TitleMain" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Alt Başlık</label>
                                <input name="TitleSub" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Sıra</label>
                                <input name="Order" class="form-control" required>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

