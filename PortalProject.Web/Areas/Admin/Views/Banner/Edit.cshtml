@model PortalProject.Web.Areas.Admin.Models.BannerModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Banner Düzenle</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("BannerEdit", "Banner", System.Web.Mvc.FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <input name="hfId" value="@Model.Id" type="hidden" />
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Görsel (1920 x 600 px)</label>
                                <input type="file" name="Photo" class="form-control">
                            </div>

                            <div class="form-group">
                                <label>Durum</label>
                                <select name="Active" class="form-control">
                                    <option value="1" @(Model.Active == PortalProject.Core.Enums.Common.State.Active ? "selected=selected" : " ")>Aktif</option>
                                    <option value="0" @(Model.Active == PortalProject.Core.Enums.Common.State.Passive ? "selected=selected" : " ")>Pasif</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Url Hedef</label>
                                <select name="UrlTarget" class="form-control">
                                    <option value="_self" @(Model.UrlTarget == "_self" ? "selected=selected" : " ")>Url aynı sekmede açılsın</option>
                                    <option value="_blank" @(Model.UrlTarget == "_blank" ? "selected=selected" : " ")>Url yeni sekmede açılsın</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Url</label>
                                <input name="Url" value="@Model.Url" class="form-control">
                            </div>

                            <input type="submit" class="btn btn-default" value="Kaydet" />
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input name="TitleMain" value="@Model.TitleMain" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Alt Başlık</label>
                                <input name="TitleSub" value="@Model.TitleSub" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Sıra</label>
                                <input name="Order" value="@Model.Order" class="form-control" required>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
