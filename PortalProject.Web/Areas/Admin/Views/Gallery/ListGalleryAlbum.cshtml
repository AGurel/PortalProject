@model PortalProject.Web.Areas.Admin.Models.GalleryModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Galeri Albüm Yönetimi</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>Aktif / Pasif</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GalleryAlbumList)
                            {
                                <tr class="odd gradeX">
                                    <td>@item.Title</td>
                                    <td style="width:150px;">@(item.Active == PortalProject.Core.Enums.Common.State.Active ? "Aktif" : "Pasif")</td>
                                    <td style="width:150px;">
                                        <a href="/admin/proservice/edit/@item.Id" class="btn btn-default">Düzenle</a>
                                        <a id="aDelete" href="" class="btn btn-danger" onclick="return confirm('Are you sure?');">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
