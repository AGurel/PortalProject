@model PortalProject.Web.Areas.Admin.Models.ProductModel
@{
    <script src="~/areas/admin/ckfinder/ckfinder.js"></script>
    <script src="~/areas/admin/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script>
    $(function () {
        @* Burada Ckeditorün içine Ckfinder'ı dahil ettik.*@

        CKEDITOR.replace("txtIcerik");
        CKFinder.setupCKEditor(null, "/areas/admin/ckfinder/");
    });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Ürün Ekle</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    @using (Html.BeginForm("ProductAdd", "Product", System.Web.Mvc.FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label>Görsel (360 x 240 px)</label>
                                <input type="file" name="Photo" class="form-control" required>
                            </div>

                            <div class="form-group">
                                <label>Durum</label>
                                <select name="Active" class="form-control">
                                    <option value="1">Aktif</option>
                                    <option value="0">Pasif</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label>Başlık</label>
                                <input name="Name" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Sıra</label>
                                <input name="Order" class="form-control" required>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <label>İçerik</label>
                                <textarea id="txtIcerik" name="Content" rows="2" cols="20"></textarea>
                            </div>
                            <input type="submit" class="btn btn-default" value="Kaydet" />
                        </div>
                    }
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
